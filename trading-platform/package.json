{
  "name": "trading-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=backend",
    "dev:execution": "npm run dev --workspace=execution-service",
    "dev:events": "npm run dev --workspace=event-service",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "db:generate": "cd apps/backend && npx prisma generate",
    "db:push": "cd apps/backend && npx prisma db push",
    "db:studio": "cd apps/backend && npx prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  }
}
